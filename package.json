{
  "name": "mon-app-globale",
  "private": true,
  "scripts": {
    "format": "prettier --write .",
    "format:db": "prisma format --schema=backend/prisma/schema.prisma",
    "format:all": "npm run format && npm run format:db",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md,css,scss}": [
      "prettier --write"
    ],
    "backend/**/*.prisma": [
      "npx prisma format --schema=backend/prisma/schema.prisma"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4"
  }
}
