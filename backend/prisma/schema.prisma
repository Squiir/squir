generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String  @id @default(uuid())
  email     String  @unique
  username  String  @unique
  password  String
  avatarUrl String?
  status    String?

  birthDate DateTime
  firstName String?
  lastName  String?

  loyaltyPoints Int @default(0)

  refreshToken String?

  qrCodes QRCode[]

  sentFriendRequests     Friend[] @relation("FriendRequester")
  receivedFriendRequests Friend[] @relation("FriendReceiver")

  groupMemberships  GroupMember[]
  sentGroupMessages GroupMessage[]     @relation("UserSentGroupMessages")
  groupMessageReads GroupMessageRead[]

  pollVotes PollVote[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model QRCode {
  id    String  @id @default(uuid())
  label String
  used  Boolean @default(false)

  userId    String
  barId     String
  productId String
  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, barId, productId], name: "userId_barId_productId")
}

enum FriendStatus {
  PENDING
  ACCEPTED
  REJECTED
}

model Friend {
  id String @id @default(uuid())

  requesterId String
  receiverId  String

  status FriendStatus @default(PENDING)

  requester User @relation("FriendRequester", fields: [requesterId], references: [id], onDelete: Cascade)
  receiver  User @relation("FriendReceiver", fields: [receiverId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([requesterId, receiverId])
  @@index([receiverId])
}

model Group {
  id   String @id @default(uuid())
  name String

  members  GroupMember[]
  messages GroupMessage[]

  events GroupEvent[]
  polls  Poll[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GroupMember {
  id String @id @default(uuid())

  userId  String
  groupId String

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  lastReadAt DateTime?

  joinedAt DateTime @default(now())

  @@unique([userId, groupId])
  @@index([groupId])
}

model GroupMessage {
  id String @id @default(uuid())

  groupId  String
  authorId String
  text     String

  group  Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  author User  @relation("UserSentGroupMessages", fields: [authorId], references: [id], onDelete: Cascade)

  reads GroupMessageRead[]

  createdAt DateTime @default(now())

  @@index([groupId, createdAt])
}

model GroupMessageRead {
  id String @id @default(uuid())

  messageId String
  userId    String

  message GroupMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user    User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([messageId, userId])
  @@index([userId])
}

model GroupEvent {
  id String @id @default(uuid())

  groupId  String
  title    String?
  location String?
  startAt  DateTime?
  endAt    DateTime?

  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model Poll {
  id       String @id @default(uuid())
  groupId  String
  question String

  group   Group        @relation(fields: [groupId], references: [id], onDelete: Cascade)
  options PollOption[]

  createdAt DateTime @default(now())
}

model PollOption {
  id     String @id @default(uuid())
  pollId String
  label  String

  poll  Poll       @relation(fields: [pollId], references: [id], onDelete: Cascade)
  votes PollVote[]
}

model PollVote {
  id String @id @default(uuid())

  optionId String
  userId   String

  option PollOption @relation(fields: [optionId], references: [id], onDelete: Cascade)
  user   User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([optionId, userId])
}

model Bar {
  id             String @id @default(uuid())
  name           String
  arrondissement Int
  latitude       Float
  longitude      Float
  color          String

  offers Offer[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Offer {
  id    String @id @default(uuid())
  name  String
  price Float

  barId String
  bar   Bar    @relation(fields: [barId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
