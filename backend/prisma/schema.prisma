generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  PROFESSIONAL
  CUSTOMER
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  username String @unique
  password String

  birthDate DateTime
  firstName String?
  lastName  String?

  avatarUrl     String?
  status        String?
  loyaltyPoints Int      @default(0)
  role          UserRole @default(CUSTOMER)

  qrCodes QRCode[]
  friends Friend[]      @relation("UserFriends")
  groups  GroupMember[]
  barId   String?
  bar     Bar?          @relation("BarUsers", fields: [barId], references: [id])

  refreshToken String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model QRCode {
  id         String    @id @default(uuid())
  userId     String
  barId      String
  offerId    String
  label      String?
  used       Boolean   @default(false)
  consumedAt DateTime?
  createdAt  DateTime  @default(now())
  user       User      @relation(fields: [userId], references: [id])
  bar        Bar       @relation(fields: [barId], references: [id])
  offer      Offer     @relation(fields: [offerId], references: [id])
}

model Friend {
  id        String   @id @default(uuid())
  userId    String
  friendId  String
  user      User     @relation("UserFriends", fields: [userId], references: [id])
  createdAt DateTime @default(now())

  @@unique([userId, friendId])
}

model Group {
  id        String        @id @default(uuid())
  name      String
  members   GroupMember[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model GroupMember {
  id       String   @id @default(uuid())
  groupId  String
  userId   String
  group    Group    @relation(fields: [groupId], references: [id])
  user     User     @relation(fields: [userId], references: [id])
  joinedAt DateTime @default(now())

  @@unique([groupId, userId])
}

model Purchase {
  id        String   @id @default(uuid())
  userId    String
  amount    Float
  points    Int
  createdAt DateTime @default(now())
}

model Bar {
  id             String   @id @default(uuid())
  name           String
  address        String
  arrondissement Int
  latitude       Float
  longitude      Float
  color          String
  users          User[]   @relation("BarUsers")
  offers         Offer[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  qrCodes        QRCode[]
}

model Offer {
  id      String   @id @default(uuid())
  name    String
  price   Float
  qrCodes QRCode[]

  barId String
  bar   Bar    @relation(fields: [barId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
